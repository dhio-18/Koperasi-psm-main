################################################################################
# TEMPLATE .env UNTUK PRODUCTION
# Copy file ini menjadi .env dan ubah nilai sesuai production server
# JANGAN COMMIT .env YANG BERISI CREDENTIALS KE GIT!
################################################################################

# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME="Koperasi PSM"
APP_ENV=production                    # ✅ PRODUCTION
APP_KEY=base64:GENERATE_NEW_KEY_HERE  # ⚠️ GENERATE KEY BARU! Jalankan: php artisan key:generate
APP_DEBUG=false                       # ✅ PRODUCTION (JANGAN UBAH KE TRUE)
APP_URL=https://yourdomain.com        # ⚠️ UBAH KE DOMAIN PRODUCTION
API_URL=https://yourdomain.com/api/v1 # ⚠️ UBAH KE DOMAIN PRODUCTION

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_TIMEZONE=Asia/Jakarta

# ============================================================================
# SECURITY & PERFORMANCE
# ============================================================================
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ============================================================================
# LOGGING - Production logging
# ============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning                     # ✅ PRODUCTION (BUKAN debug)
# Note: Ini akan hanya log WARNING dan ERROR, bukan DEBUG logs

# ============================================================================
# DATABASE - ⚠️ UBAH SEMUA NILAI
# ============================================================================
DB_CONNECTION=mysql
DB_HOST=your_production_db_host       # ⚠️ UBAH (misal: db.example.com)
DB_PORT=3306
DB_DATABASE=koperasi_psm              # ⚠️ UBAH jika diperlukan
DB_USERNAME=production_user           # ⚠️ UBAH (jangan gunakan root)
DB_PASSWORD=YourStrongPasswordHere123!@# # ⚠️ UBAH dengan password KUAT

# ============================================================================
# SESSION - Production
# ============================================================================
SESSION_DRIVER=database               # ✅ OK
SESSION_LIFETIME=120
SESSION_ENCRYPT=true                  # ✅ AMAN
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com        # ⚠️ UBAH ke domain production

# ============================================================================
# CACHE - Untuk production gunakan Redis
# ============================================================================
CACHE_STORE=redis                     # ⚠️ Rekomendasi: gunakan Redis (bukan database)
# Jika tidak ada Redis, bisa gunakan:
# CACHE_STORE=file
# CACHE_PREFIX=koperasi_psm_cache

MEMCACHED_HOST=127.0.0.1

# ============================================================================
# REDIS - Jika menggunakan Redis untuk cache & queue
# ============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1                  # ⚠️ UBAH ke Redis server
REDIS_PASSWORD=null                   # ⚠️ UBAH jika Redis protected
REDIS_PORT=6379

# ============================================================================
# BROADCAST & QUEUE - Production
# ============================================================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local                 # Atau gunakan 's3' jika menggunakan AWS
QUEUE_CONNECTION=database              # Bisa gunakan 'redis' untuk performance lebih baik
# Rekomendasi: gunakan Redis atau SQS untuk queue

# ============================================================================
# EMAIL - Production mail server
# ============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com              # ⚠️ UBAH ke production mail server
MAIL_PORT=587
MAIL_ENCRYPTION=tls
MAIL_USERNAME=your_email@gmail.com    # ⚠️ UBAH
MAIL_PASSWORD=your_app_password       # ⚠️ UBAH (gunakan App Password, bukan akun password)
MAIL_FROM_ADDRESS="noreply@yourdomain.com"  # ⚠️ UBAH
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================================
# GOOGLE OAUTH - ⚠️ UBAH DENGAN PRODUCTION CREDENTIALS
# ============================================================================
# 1. Create new OAuth app di: https://console.cloud.google.com/
# 2. Set Authorized redirect URIs ke: https://yourdomain.com/auth/google/callback
# 3. Copy credentials di bawah:
GOOGLE_CLIENT_ID=your_production_client_id.apps.googleusercontent.com        # ⚠️ UBAH
GOOGLE_CLIENT_SECRET=your_production_client_secret_here                      # ⚠️ UBAH
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback              # ⚠️ UBAH

# ============================================================================
# AWS S3 (Optional - jika menggunakan S3 untuk file storage)
# ============================================================================
# AWS_ACCESS_KEY_ID=your_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=your_bucket_name
# AWS_URL=https://your_bucket_name.s3.amazonaws.com
# AWS_ENDPOINT=https://s3.amazonaws.com

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================================
# VITE - Frontend build
# ============================================================================
VITE_APP_NAME="${APP_NAME}"

# ============================================================================
# TAMBAHAN UNTUK PRODUCTION
# ============================================================================
# Uncomment berikut jika perlu maintenance mode saat deploy:
# APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

